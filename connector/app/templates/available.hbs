{{#if location}}
  {{#link-to 'location' class="btn btn-primary"}}{{t "form-controls.buttons.back"}}{{/link-to}}
  <div class="selected-location">
    <h3>{{t "available.title"}}</h3>
    {{location-address-block location}}
    {{map-link location=location}}
  </div>
  <!-- selected-location-template -->

  <form id="appointment-searcher" data-partner="">
    <fieldset class="row">
      <div class="col-sm-4 form-group">
        <label for="event_type">{{t "form-controls.application-type.label"}}:</label>
        {{select-widget options=applTypeOptions optionValue="id" optionLabel="label" value=userInput.event_type class="form-control"}}
      </div>
      <div class="col-sm-4 form-group">
        <label for="start_time">{{t "form-controls.start-date"}}:</label>
        {{input type="date" class="form-control" id="start_time" value=userInput.start_time}}
      </div>
      <div class="col-sm-4 form-group">
        <label for="end_time">{{t "form-controls.end-date"}}:</label>
        {{input type="date" id="end_time" class="form-control" value=userInput.end_time}}
      </div>
      <div class="btn-wrapper">
        <button id="btn-search-appointments" class="btn btn-lg btn-primary" role="button" type="submit" {{action 'searchAppointments'}}>{{t "form-controls.buttons.search-appointments"}}</button>
      </div>
    </fieldset>
  </form>

  {{partial "available-results"}}
{{else}}
  <p>{{t "errors.no-location"}}</p>
  {{#link-to 'location' class="btn btn-primary"}}{{t "form-controls.buttons.find-location"}}{{/link-to}}
{{/if}}