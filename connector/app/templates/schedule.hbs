{{#link-to 'available'}}{{t "form-controls.buttons.back"}}{{/link-to}}<br><br>

{{#if appointment}}
  <div class="appointment-preconfirm row">
    <div class="col-sm-4">
      {{event-time appointment.local_start_time appointment.local_end_time}}
    </div><br>
    <div class="col-sm-4">
      {{appt-event-title appointment}}
      {{location-address-block location}}
      {{map-link location=location}}
    </div><br>
    <div class="col-sm-4">
      {{accommodations-list items=appointment.accommodations}}
    </div><br>
  </div>
  <form id="appointment-scheduler" data-partner="" {{action "schedule" on="submit"}}>
    <fieldset class="row">
      <div class="col-sm-6 col-md-3 form-group">
        <label class="home-form-label" for="firstName">{{t "form-controls.first-name.label"}}:</label>
        {{input type="text" class="form-control w-input" id="firstName" name="firstName" value=userInput.first_name placeholder=(t "form-controls.first-name.placeholder") required=true}}
      </div>
      <div class="col-sm-6 col-md-3 form-group">
        <label class="home-form-label" for="LastName">{{t "form-controls.last-name.label"}}:</label>
        {{input type="text" class="form-control w-input" id="LastName" name="LastName" value=userInput.last_name placeholder=(t "form-controls.last-name.placeholder") required=true}}
      </div>
      <div class="col-sm-6 col-md-3 form-group">
        <label class="home-form-label" for="email">{{t "form-controls.email.label"}}:</label>
        {{input type="email" id="email" name="email" class="form-control w-input" value=userInput.email placeholder=(t "form-controls.email.placeholder")}}
      </div>
      <div class="col-sm-6 col-md-3 form-group">
        <label class="home-form-label" for="phone">{{t "form-controls.email.label"}}:</label>
        {{input type="tel" id="phone" name="phone" class="form-control w-input" value=userInput.phone placeholder=(t "form-controls.phone.placeholder") required=true}}
      </div>
      <div class="col-sm-12 form-group">
        <label class="home-form-label" for="optInEmail">{{t "form-controls.opt-in-email"}}</label>
        {{input type="checkbox" name="optInEmail" id="optInEmail" checked=userInput.optInEmail}}
      </div>
      <div class="col-sm-12 btn-wrapper error">
        <p>{{confirmationError}}</p>
      </div>
      <div class="col-sm-12 btn-wrapper">
        <button class="w-button home-form-submit" role="button" id="schedule-btn">{{t "form-controls.buttons.schedule"}}</button>
      </div>
    </fieldset>
  </form>
{{else}}
  <p>{{t "errors.no-appointment"}}</p>
  <p>{{t "errors.continued"}}</p>
  {{#link-to 'location' class="btn btn-primary"}}{{t "form-controls.buttons.find-location"}}{{/link-to}}
{{/if}}
