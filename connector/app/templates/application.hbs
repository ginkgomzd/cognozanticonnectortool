<div class="wsb-canvas body">
  <div class="wsb-canvas-page-container">
    <div id="wsb-canvas-template-page" class="wsb-canvas-page page">

      <div id="wsb-canvas-template-container">
        <div id="cognosante-header">
          <h1>{{t "app.title"}}</h1>
        </div>

        <!-- CLIENT-SPECIFIC WRAPPER FOR CONNECTOR WIDGET -->
        <div id="connector-wrapper">
          <!--CONNECTOR API WIDGET-->
          <div id="connector-api" class="container-fluid">
            <noscript class="error">
              <p>
                <!--// This can't be translated because by definition no javascript will run //-->
                Your browser does not support JavaScript, or JavaScript has been
                disabled. This site requires JavaScript.
              </p>
            </noscript>
            {{outlet}}
          </div>
          <!--/END CONNECTOR API WIDGET-->
        </div>
        <!-- /END CLIENT-SPECIFIC WRAPPER FOR CONNECTOR WIDGET -->

        <div id="cognosante-content">
          <div class="copy">
            <p>{{t "app.about1"}}</p>
            <p>{{t "app.about2"}}</p>
          </div>
          <div id="cognosante-footer">
            <div class="logos">
              <img alt="{{t "app.cognosante-tag"}}" title="{{t "app.cognosante-tag"}}" class="cognosante" src="/img/cognosante.png" />
            </div>
            <div class="legal">{{t "app.legal"}}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>